rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /referrals/{referralId} {
      allow read, write: if true;
    }
    
    match /schools/{schoolId} {
      allow read: if true;
      allow write: if true;
    }
    
    match /analytics/{docId} {
      allow read: if true;
      allow write: if true;
    }
  }
}
